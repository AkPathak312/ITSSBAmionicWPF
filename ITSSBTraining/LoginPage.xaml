<Page x:Class="ITSSBTraining.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITSSBTraining"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110.18"/>
            <RowDefinition Height="147.007"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="134*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="amioniclogo.png" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10" Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Username : "/>
            <TextBox x:Name="txtUserName" Width="300"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10" Orientation="Horizontal" Grid.Row="3">
            <TextBlock Text="Password : "/>
            <PasswordBox x:Name="txtPassword"  Width="300"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,10" Orientation="Horizontal" Grid.Row="4">
            <Button x:Name="btnLogin" Width="100" Click="Button_Click" Margin="20" Content="Login"/>
            <Button Content="Exit" Width="100" Margin="20"/>
        </StackPanel>
        <TextBlock x:Name="txtTimer" Text="Login time" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Hidden" Margin="0,131,0,0" Grid.Row="1"/>
    </Grid>
</Page>
